---
const BOOKINGS_URL =
  "https://outlook.office.com/bookwithme/user/deee507d052c44cdb348d462d109226c@altivisconsulting.com/meetingtype/hHyenRfQA0q55EK3CF_gdg2?bookingcode=26ec4be1-86e9-4afd-8841-1d0e7c4d9322&anonymous&ismsaljsauthenabled&ep=mlink";
// NOTE: if your link ever changes, update only this constant.

const CONTACT_EMAIL = "bill@altivisconsulting.com";

const page = {
  title: "Altivis Consulting LLC | Operations & Supply Chain Consulting",
  description:
    "Altivis Consulting helps operations and supply chain leaders turn messy planning, unclear KPIs, and manual processes into a system that runs—fast, is highly visible, and repeatable.",
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{page.title}</title>
    <meta name="description" content={page.description} />

    <!-- Basic SEO -->
    <meta name="robots" content="index,follow" />
    <link rel="canonical" href="https://altivisconsulting.com/" />

    <!-- Simple, fast typography -->
    <style>
      :root {
        color-scheme: light;
      }
       body {
        margin: 0;
        padding: 0 12px;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto,
          Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
        line-height: 1.5;
        color: #0b1220;
        background: #3db68d;
      }
      @media (min-width: 900px) {
        body {
          padding: 0;
        }
      }
      a {
        color: inherit;
      }
      .wrap {
        max-width: 1040px;
        margin: 0 auto;
        padding: 0 20px;
      }
      .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        padding: 18px 0;
      }
      .brand {
        font-weight: 700;
        letter-spacing: -0.02em;
      }
      .pill {
        display: inline-flex;
        gap: 8px;
        align-items: center;
        border: 1px solid #e6e8ee;
        border-radius: 999px;
        padding: 6px 10px;
        font-size: 13px;
        background: #fafbff;
      }
      .hero {
        padding: 44px 0 28px;
      }
      .grid {
        display: grid;
        gap: 18px;
      }
      .hero .grid-2 {
        gap: 28px;
      }
      @media (min-width: 900px) {
        .grid-2 {
          grid-template-columns: 1.2fr 0.8fr;
          align-items: start;
        }
        .grid-3 {
          grid-template-columns: repeat(3, 1fr);
        }
      }
      h1 {
        font-size: 38px;
        line-height: 1.08;
        letter-spacing: -0.03em;
        margin: 14px 0 12px;
      }
      @media (min-width: 900px) {
        h1 {
          font-size: 48px;
        }
      }
      h2 {
        font-size: 22px;
        margin: 0 0 10px;
        letter-spacing: -0.02em;
      }
      p {
        margin: 0 0 12px;
        color: #243049;
      }
      .muted {
        color: #4a5874;
      }
      .btnrow {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 16px;
      }
      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        padding: 12px 14px;
        text-decoration: none;
        font-weight: 600;
        border: 1px solid #d6d9e2;
        background: #ffffff;
      }
      .btn.primary {
        background: #0b1220;
        border-color: #0b1220;
        color: #ffffff;
      }
      .card {
        border: 1px solid #e6e8ee;
        border-radius: 16px;
        padding: 16px;
        background: #ffffff;
      }
      .card strong {
        color: #0b1220;
      }
      .kpi {
        display: grid;
        gap: 10px;
      }
      .kpi .row {
        display: flex;
        gap: 10px;
        align-items: baseline;
        justify-content: space-between;
        border-top: 1px dashed #e6e8ee;
        padding-top: 10px;
      }
      .kpi .row:first-child {
        border-top: none;
        padding-top: 0;
      }
      .section {
        padding: 26px 0;
      }
      .tag {
        display: inline-block;
        font-size: 12px;
        border: 1px solid #e6e8ee;
        border-radius: 999px;
        padding: 4px 8px;
        background: #ffffff;
        color: #36435c;
        margin-right: 8px;
        margin-bottom: 8px;
      }
      .footer {
        padding: 26px 0 40px;
        border-top: 1px solid #eef0f6;
        margin-top: 22px;
        font-size: 13px;
        color: #52607b;
      }
      input,
      textarea {
        width: 100%;
        box-sizing: border-box;
        padding: 12px 12px;
        border-radius: 12px;
        border: 1px solid #d6d9e2;
        font: inherit;
      }
      textarea {
        min-height: 110px;
        resize: vertical;
      }
      label {
        display: block;
        font-weight: 600;
        font-size: 13px;
        margin: 12px 0 6px;
        color: #243049;
      }
      .small {
        font-size: 13px;
      }
      .split {
        display: grid;
        gap: 14px;
      }
      @media (min-width: 900px) {
        .split {
          grid-template-columns: 1fr 1fr;
          align-items: start;
        }
      }
    </style>
  </head>

  <body>
    <header class="wrap">
      <nav class="nav">
        <div class="brand">Altivis Consulting LLC</div>
        <a class="btn primary" href={BOOKINGS_URL} target="_blank" rel="noopener">
          Get a free 20-min ops triage
        </a>
      </nav>
    </header>

    <main>
      <!-- HERO -->
      <section class="hero wrap">

        <div class="grid grid-2" style="margin-top: 16px;">
          <div>
            <h1>
              Make operations predictable: cleaner planning, clearer KPIs, and fewer fire drills.
            </h1>
            <p class="muted" style="font-size: 16px;">
              Altivis helps operations and supply chain leaders build practical systems that
              improve throughput, stabilize planning, and create visibility.
            </p>

        <div class="pill">
          <span>Operations • S&amp;OP • Systems Automation • Process Improvement</span>
        </div>

            <div class="btnrow">
              <a class="btn primary" href="#contact">
                Get in touch
              </a>
              <a class="btn primary" href="/altivis-capability-statement.pdf">
                Download capability statement (PDF)
              </a>
            </div>

            <p class="small muted" style="margin-top: 10px;">
              Typical engagements: 4–12 weeks • Project-based or hourly • Remote-first (on-site as needed)
            </p>
          </div>

          <aside class="card">
            <h2 style="margin-bottom: 8px;">What you’ll get from the triage</h2>
            <div class="kpi">
              <div class="row">
                <div><strong>Clarity</strong></div>
                <div class="muted small">Your #1 bottleneck + why it persists</div>
              </div>
              <div class="row">
                <div><strong>Plan</strong></div>
                <div class="muted small">A 30-day action plan you can run</div>
              </div>
              <div class="row">
                <div><strong>Options</strong></div>
                <div class="muted small">DIY guidance or a scoped engagement</div>
              </div>
              <div class="row">
              <div class="muted small">Note: Triage report generally delivered within 48hrs</div>
              </div>
            </div>
          </aside>
        </div>
      </section>

      <!-- WHO WE HELP -->
      <section class="section wrap">
        <h2>Who Altivis is best for</h2>
        <p class="muted">
          Executives, Owners, and Supply Chain Leaders who need hands-on help improving operations and driving insights through KPIs
        </p>
        <div style="margin-top: 10px;">
          <span class="tag">Operations &amp; Supply Chain Leaders</span>
          <span class="tag">Plant / Site Leadership</span>
          <span class="tag">Planning &amp; Customer Fulfillment</span>
          <span class="tag">Manufacturing &amp; Life Sciences</span>
          <span class="tag">Mid-market to enterprise teams</span>
        </div>
      </section>

      <!-- SERVICES -->
      <section class="section wrap">
        <h2>Core services</h2>
        <p class="muted">A focused menu, clear scope, and real deliverables.</p>

        <div class="grid grid-3" style="margin-top: 14px;">
          <div class="card">
            <strong>S&amp;OP and planning system design</strong>
            <p class="small muted" style="margin-top: 8px;">
              Meeting cadence, roles, inputs/outputs, and a plan that aligns demand, supply, and finance.
            </p>
          </div>
          <div class="card">
            <strong>KPI systems &amp; operational analytics</strong>
            <p class="small muted" style="margin-top: 8px;">
              Define the few metrics that drive decisions then build a simple reporting rhythm people use.
            </p>
          </div>
          <div class="card">
            <strong>Lean process improvement</strong>
            <p class="small muted" style="margin-top: 8px;">
              Remove waste, shorten cycle time, and standardize work within teams.
            </p>
          </div>
        </div>

        <div class="card" style="margin-top: 14px;">
          <strong>Also available:</strong>
          <p class="small muted" style="margin-top: 8px;">
            Forecasting &amp; capacity models • Inventory/working-capital improvement • Cross-functional operating rhythms • Systems automation
          </p>
        </div>
      </section>

      <!-- PROOF -->
      <section class="section wrap">
        <h2>Selected experience &amp; results</h2>
        <div class="grid grid-3" style="margin-top: 14px;">
          <div class="card">
            <strong>12+ years in operations</strong>
            <p class="small muted" style="margin-top: 8px;">
              Manufacturing, planning, and supply chain from shop floor to executive reporting.
            </p>
          </div>
          <div class="card">
            <strong>Scaled output ~400%</strong>
            <p class="small muted" style="margin-top: 8px;">
              Supported COVID test kit ramp by building production readiness and planning discipline.
            </p>
          </div>
          <div class="card">
            <strong>Reduced cycle time ~50%</strong>
            <p class="small muted" style="margin-top: 8px;">
              Lean and process improvements in regulated manufacturing environments.
            </p>
          </div>
        </div>
        
      </section>

      <!-- PROCESS -->
      <section class="section wrap">
        <h2>How engagements work</h2>
        <div class="grid grid-3" style="margin-top: 14px;">
          <div class="card">
            <strong>1) Diagnose</strong>
            <p class="small muted" style="margin-top: 8px;">
              Quick discovery: objectives, constraints, data reality-check, and where the system is breaking.
            </p>
          </div>
          <div class="card">
            <strong>2) Design</strong>
            <p class="small muted" style="margin-top: 8px;">
              We pick the simplest operating rhythm and metrics that solve the problem, not add overhead.
            </p>
          </div>
          <div class="card">
            <strong>3) Implement</strong>
            <p class="small muted" style="margin-top: 8px;">
              Templates, training, and working sessions so the team can run it without me.
            </p>
          </div>
        </div>
      </section>

      <!-- ABOUT -->
      <section class="section wrap">
        <div class="split">
          <div class="card">
            <h2>About Altivis</h2>
            <p class="muted">
              Altivis Consulting LLC helps teams build operational systems that stick: planning, KPI visibility,
              and lean execution. The goal is fewer surprises, faster decisions, and steady improvement. We believe the best 
              processes are the ones that you can forget about.
            </p>
          </div>
          <div class="card">
            <h2>About Bill</h2>
            <p class="muted">
              Bill Clarke is an operations and supply chain consultant with 12+ years across manufacturing and life sciences,
              including Deloitte. His style is hands-on: clarify the problem, build the solution, and transfer the playbook.
            </p>
          </div>
        </div>
      </section>

      <!-- CONTACT -->
      <section id="contact" class="section wrap">
        <div class="split">
          <div class="card">
            <h2>Contact</h2>
            <p class="muted">
              The fastest way to connect is the 20-min triage. If you prefer, send a note here and I’ll reply by email.
            </p>

            <div class="btnrow" style="margin-top: 12px;">
              <a class="btn primary" href={BOOKINGS_URL} target="_blank" rel="noopener">
                Get a free 20-min ops triage
              </a>
              <a class="btn" href={`mailto:${CONTACT_EMAIL}`}>
                Email {CONTACT_EMAIL}
              </a>
            </div>

            <p class="small muted" style="margin-top: 10px;">
              Response time: typically within 1 business day.
            </p>
          </div>

          <div class="card">
            <h2>Send a message</h2>

            <form method="POST" action="https://formspree.io/f/xjggrpzn">
              <input type="hidden" name="_subject" value="New Altivis Consulting lead" />
              <input type="hidden" name="_next" value="https://altivisconsulting.com/thanks/" />
              <input type="text" name="_gotcha" style="display:none" tabindex="-1" autocomplete="off" />
            
              <label for="name">Name</label>
              <input id="name" name="name" type="text" autocomplete="name" required />

              <label for="email">Email</label>
              <input id="email" name="email" type="email" autocomplete="email" required />

              <label for="message">What are you working on?</label>
              <textarea id="message" name="message" required></textarea>

              <div class="btnrow" style="margin-top: 12px;">
                <button class="btn primary" type="submit">Send</button>
              </div>

            </form>
          </div>
        </div>
      </section>

      <footer class="footer wrap">
        <div class="grid" style="gap: 6px;">
          <div>© {new Date().getFullYear()} Altivis Consulting LLC</div>
          <div>
            Privacy: We only use your information to respond to your inquiry. Basic site analytics may be enabled to
            understand traffic (no sale of personal information).
          </div>
        </div>
      </footer>
    </main>
  </body>
</html>
