---
const {
  title,
  subtitle,
  id,
  variant = "default", // "default" or "muted"
} = Astro.props;
---

<section id={id} class={`section section--${variant}`}>
  <div class="wrap">
    {title && <h2 class="section-title">{title}</h2>}
    {subtitle && <p class="section-subtitle muted">{subtitle}</p>}

    <div class="section-body">
      <slot />
    </div>
  </div>
</section>
